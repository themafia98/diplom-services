{
    "root": "client/build/",
    "https_only": true,
    "routes": {
        "/**": "index.html"
    },
    "proxies": {
        "/rest/": {
            "origin": "https://salty-plains-52260.herokuapp.com/rest"
        }
    },
    "headers": {
        "/": {
            "Cache-Control": "no-store, no-cache"
        },
        "**.js": {
            "Cache-Control": "public, max-age=31536000",
            "Access-Control-Allow-Origin": "cdn-instance.example.com"
        },
        "**.css": {
            "Cache-Control": "public, max-age=31536000",
            "Access-Control-Allow-Origin": "cdn-instance.example.com"
        }
    }
}