{
  "name": "diplom-services",
  "version": "1.0.0",
  "main": "server.js",
  "repository": "https://github.com/themafia98/diplom-services.git",
  "author": "Pavel Petrovich <gaara33377@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "run-p dev:**",
    "start": "node --inspect=9229 -r ts-node/register ./src/index.ts && start:watch",
    "start:watch": "nodemon --watch ./",
    "start:app": "cd client && yarn start",
    "dev:server": "cross-env NODE_ENV=development cross-env API_VERSION=v1 nodemon ./src/index.ts --inspect",
    "build": "run-p build:**",
    "buildprod": "tsc",
    "build:ts": "tsc",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "standardx --fix ./src/**/*.ts",
    "fix:prettier": "prettier --write \"./**/*.*\"",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint \"./**/*.*\"",
    "format": "prettier --write **/**/**/*.{js,jsx,json,css,ts,scss}",
    "lint-staged": "lint-staged",
    "disabled": "eslint --cache",
    "lint:client": "eslint --ext=jsx,ts,tsx client/src --fix"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "./src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,json,scss,css,md}": "prettier --write"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "chalk": "^4.1.1",
    "connect-mongo": "^4.4.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "dropbox": "^10.4.3",
    "express": "^4.16.4",
    "express-rate-limit": "^5.3.0",
    "express-session": "^1.17.2",
    "forever": "^4.0.1",
    "generate-password": "^1.5.1",
    "helmet": "^4.6.0",
    "isomorphic-fetch": "^3.0.0",
    "lodash": "^4.17.20",
    "mime": "^2.4.5",
    "mongodb": "^4.17.0",
    "mongoose": "^5.13.3",
    "multer": "^1.4.2",
    "nodemailer": "^6.6.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "socket.io": "^4.1.3",
    "uuid": "^8.3.1",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/plugin-transform-object-assign": "^7.14.5",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@types/bcrypt": "^5.0.0",
    "@types/component-emitter": "^1.2.10",
    "@types/cookie": "^0.4.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/express-session": "1.17.4",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/lodash": "^4.14.171",
    "@types/mongodb": "^3.6.20",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.2",
    "@types/nodemailer": "^6.4.4",
    "@types/passport": "^1.0.7",
    "@types/passport-local": "^1.0.34",
    "@types/request": "^2.48.6",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^8.3.1",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "analyze-es6-modules": "^0.6.2",
    "babel-eslint": "^10.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "copyfiles": "^2.1.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.31.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-clean-regex": "^0.5.1",
    "eslint-plugin-flowtype": "^5.8.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "standardx": "7.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^22.0.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
