    "license": "MIT",
    "scripts": {
        "dev": "run-p dev:**",
        "heroku-postbuild": "cd client && yarn install && yarn add node-sass --dev && cd ../ && yarn buildprod",
        "start": "node ./server/build/index.js",
        "dev:server": "cross-env NODE_ENV=development nodemon ./server/src/index.ts --pretty",
        "dev:app": "cd client && yarn start",
        "build": "run-p build:**",
        "buildprod": "cd client && yarn build && cd ../ && cd server && tsc",
        "client": "cd client && yarn build",
        "build:ts": "cd server && tsc",
        "build:app": "cd client && yarn build && copyfiles -f -V src/build/**/*.* /var/www"
    },
    "dependencies": {
        "bcrypt": "^3.0.6",
        "chalk": "^3.0.0",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.16.4",
        "express-rate-limit": "^5.0.0",
        "express-validator": "^6.3.0",
        "forever": "^1.0.0",
        "helmet": "^3.21.2",
        "lodash": "^4.17.15",
        "mongodb": "^3.3.4",
        "mongoose": "^5.7.10",
        "multer": "^1.4.2",
        "nodemailer": "^6.3.1",
        "socket.io": "^2.3.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@babel/preset-typescript": "^7.7.2",
        "@types/bcrypt": "^3.0.0",
        "@types/express": "^4.17.2",
        "@types/helmet": "^0.0.45",
        "@types/lodash": "^4.14.147",
        "@types/mongodb": "^3.3.10",
        "@types/mongoose": "^5.5.34",
        "@types/node": "^12.12.7",
        "@types/nodemailer": "^6.2.2",
        "@types/socket.io": "^2.1.4",
        "@types/winston": "^2.4.4",
        "copyfiles": "^2.1.1",
        "cross-env": "^6.0.3",
        "nodemon": "^1.19.4",
        "npm-run-all": "^4.1.5",
        "ts-node": "^8.5.0",
        "typescript": "^3.7.2"
    }
}
