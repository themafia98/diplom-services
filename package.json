    "license": "MIT",
    "scripts": {
        "dev": "run-p dev:**",
        "heroku-postbuild": "cd client && yarn install && yarn add node-sass --dev && cd ../ && yarn buildprod",
        "start": "node ./server/build/index.js",
        "dev:server": "cross-env NODE_ENV=development nodemon ./server/src/index.ts --pretty",
        "dev:app": "cd client && yarn start",
        "build": "run-p build:**",
        "buildprod": "cd client && yarn build && cd ../ && cd server && tsc",
        "client": "cd client && yarn build",
        "build:ts": "cd server && tsc",
        "build:app": "cd client && yarn build && copyfiles -f -V src/build/**/*.* /var/www",
        "prettierClient": "prettierâ€Š--write client/src/**/*.{ts,js,jsx,css}",
        "fix": "yarn fix:eslint && yarn fix:prettier",
        "fix:eslint": "eslint --fix \"./**/*.*\"",
        "fix:prettier": "prettier --write \"./**/*.*\"",
        "lint": "yarn lint:eslint && yarn lint:prettier",
        "lint:eslint": "eslint \"./**/*.*\"",
        "lint:prettier": "prettier --check \"./**/*.*\"",
        "format": "prettier --write **/**/**/*.{js,jsx,json,css,ts,scss}",
        "lint-staged": "lint-staged"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,json,scss,css,md}": "prettier --write"
    },
