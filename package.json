{
  "name": "diplom-services",
  "version": "1.0.0",
  "main": "server.js",
  "repository": "https://github.com/themafia98/diplom-services.git",
  "author": "Pavel Petrovich <gaara33377@gmail.com>",
  "license": "MIT",
  "scripts": {
    "heroku-postbuild": "cd client && yarn install && yarn add node-sass@4.12 --dev && cd ../ && yarn buildprod",
    "dev": "run-p dev:**",
    "start": "node --inspect=9229 -r ts-node/register ./server/src/index.ts && start:watch",
    "start:watch": "nodemon --watch ./server",
    "start:app": "cd client && yarn start",
    "dev:server": "cross-env NODE_ENV=development cross-env API_VERSION=v1 nodemon ./server/src/index.ts --inspect",
    "dev:app": "cd client && yarn start",
    "build": "run-p build:**",
    "buildprod": "cd server && tsc && cd ../ cd client && yarn build",
    "client": "cd client && yarn build",
    "build:ts": "cd server && tsc",
    "build:app": "cd client && yarn build && copyfiles -f -V src/build/**/*.* /var/www",
    "prettierClient": "prettierâ€Š--write client/src/**/*.{ts,js,jsx,css}",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "standardx --fix server/src/**/*.ts",
    "fix:prettier": "prettier --write \"./**/*.*\"",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint \"./**/*.*\"",
    "lint:prettier": "prettier --check \"./**/*.*\"",
    "format": "prettier --write **/**/**/*.{js,jsx,json,css,ts,scss}",
    "lint-staged": "lint-staged",
    "disabled": "eslint --cache",
    "test": "cd client && npm run test"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "./server/src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,json,scss,css,md}": "prettier --write"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "chalk": "^4.0.0",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "dropbox": "^4.0.30",
    "express": "^4.16.4",
    "express-rate-limit": "^5.0.0",
    "express-session": "^1.17.0",
    "forever": "^3.0.2",
    "generate-password": "^1.5.1",
    "helmet": "^4.2.0",
    "isomorphic-fetch": "^3.0.0",
    "lodash": "^4.17.20",
    "mime": "^2.4.5",
    "mongodb": "^3.6.3",
    "mongoose": "^5.12.3",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.16",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "socket.io": "^3.0.1",
    "uuid": "^8.3.1",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/plugin-transform-object-assign": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/bcrypt": "^3.0.0",
    "@types/component-emitter": "^1.2.10",
    "@types/cookie": "^0.4.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/express-rate-limit": "^5.0.0",
    "@types/express-session": "1.15.16",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.165",
    "@types/mongodb": "^3.5.33",
    "@types/mongoose": "^5.10.5",
    "@types/multer": "^1.3.10",
    "@types/node": "^14.14.7",
    "@types/nodemailer": "^6.2.2",
    "@types/passport": "^1.0.2",
    "@types/passport-local": "^1.0.33",
    "@types/request": "^2.48.5",
    "@types/socket.io": "^2.1.4",
    "@types/uuid": "^8.3.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "analyze-es6-modules": "^0.6.2",
    "babel-eslint": "^10.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "copyfiles": "^2.1.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react-hooks": "^4.0.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "standardx": "7.0.0",
    "stylelint": "^13.2.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.16.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
