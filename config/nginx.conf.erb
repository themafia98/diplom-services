daemon off;
#Heroku dynos have at least 8 cores.
worker_processes <%= ENV['NGINX_WORKERS'] || 8 %>;

events {
	use epoll;
	accept_mutex on;
	worker_connections 1024;
}

http {
        gzip on;
        gzip_comp_level 2;
        gzip_min_length 512;

	server_tokens off;

	log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id';
	access_log logs/nginx/access.log l2met;
	error_log logs/nginx/error.log;

	include mime.types;
	default_type application/octet-stream;
	sendfile on;

	#Must read the body in 5 seconds.
	client_body_timeout 5;

    upstream app_server {
       server localhost:<%= ENV["APP_PORT"] %> fail_timeout=0;
    }

    upstream app_client {
        server localhost:<%= ENV["PORT"] %> fail_timeout=0;
    }


     server {
		listen <%= ENV["APP_PORT"] %>;
		server_name _;
		keepalive_timeout 5;

		location /rest/ {
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header Host $http_host;
            proxy_pass http://app_server;
			proxy_redirect http://app_client;
        }

        location / {
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header Host $http_host;
            proxy_redirect off;
            proxy_http_version 1.1;
			proxy_pass http://app_client;
         }

	 }
}
